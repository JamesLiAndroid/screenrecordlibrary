<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector">

<!--android:longClickable="true"-->
    <!--android:clickable="true"-->

    <RelativeLayout
        android:id="@+id/thumb_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.elife.videocpature.AsyncImageView
            android:id="@+id/thumb"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginRight="6dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/icon_play"/>
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/thumb_container">
        <TextView
            android:id="@+id/size_static"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="大小："/>
        <TextView
            android:id="@+id/size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/size_static"
            android:layout_alignBottom="@+id/size_static"
            tools:text="34M"/>
        <TextView
            android:id="@+id/resolution_static"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:layout_below="@id/size_static"
            android:text="分辨率："/>
        <TextView
            android:id="@+id/resolution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/resolution_static"
            android:layout_toRightOf="@id/resolution_static"
            tools:text="1024x768"/>

        <TextView
            android:id="@+id/time_static"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:layout_below="@id/resolution_static"
            android:text="创建时间："/>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/time_static"
            android:layout_alignBottom="@+id/time_static"
            tools:text="2014-12-22"/>
        </RelativeLayout>
</RelativeLayout>